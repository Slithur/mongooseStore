<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title></title>
</head>

<body>
    <nav>
        <a href="/store/new">Add a New item</a>
    </nav>
    <h1>Store index page</h1>
    <ul>
        <% stores.forEach(store=> { %>
            <li>
                <a href="/stores/<%=store._id; %>">
                    <%=stores.name; %>
                    <%=stores.img; %>
                </a>
                <form  action="/stores/<%= store.id %>?_method=DELETE" method="POST" style="display:inline; margin-left:16px;">
                    <input type="submit" value="DELETE" />
                </form>
                <a href="/stores/<%=store._id %>/edit">Edit</a>
            </li>
            <% }) %>
    </ul>
</body>

</html>
